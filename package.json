        "prebuild": "npm run clean",
        "build": "node build.js",
        "build-demo": "rimraf dist && webpack --progress --profile --bail",
        "serve-demo": "webpack-dev-server --inline --progress --port 8080",
        "test-watch": "karma start karma.conf.js --no-single-run --auto-watch",
