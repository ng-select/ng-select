    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "ng-packagr": "^2.4.2",
    "ng-snippets-loader": "^0.2.5",
    "node-sass": "^4.0.0",
    "popper.js": "^1.14.2",
    "postcss-loader": "^2.1.3",
