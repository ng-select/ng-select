{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@ng-select/ng-select": [
        "src/ng-select/public-api.ts"
      ],
      "@ng-select/ng-option-highlight": [
        "src/ng-option-highlight/public-api.ts"
      ]
    },
    "useDefineForClassFields": false
  }
}
